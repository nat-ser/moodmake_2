<div class="container">
  <container><br><br>
  <div class="row">
      <div class="col-lg-12 text-center">
          <h2 class="section-heading">Make a new Mood</h2>

      </div>
  </div>
 <%= form_for @mood do |f| %>

<% if @mood.errors.any? %>
    <div id="error_explanation" style = "color:red">
      <h2>
        <%= pluralize(@mood.errors.count, "error") %> prohibited
        this mood from being saved:
      </h2>
      <ul>
        <% @mood.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class ="form-group row">
      <%= f.label :name, "Your mood?" %>
      <%= f.text_field :name %></br></br>
</div>

<div class ="form-group row">
  Associate an existing movie:</br>
    <%= f.collection_check_boxes :movie_ids, Movie.all, :id, :name %><br></br></br></br>
</div>

<div class ="form-group row">
Link your own movie to this mood:
    <%= f.fields_for :movies do |movies_form| %>
         <li><%= movies_form.label :name %>
        <%= movies_form.text_field :name %></li>
</div>

        <div class ="form-group row">
          <li><%= movies_form.label :director %>
         <%= movies_form.text_field :director %></li>
         </div>

<div class ="form-group row">
         <li><%= movies_form.label :info %>
        <%= movies_form.text_area :info %></li>
</div>

<div class ="form-group row">
      <li><%= movies_form.label :effect_rating %>
       <%= movies_form.text_field :effect_rating %></li>
</div>
      <% end %>

  </br>


  <%= f.submit%>
  <%= link_to 'Back', moods_path, class:"btn btn-primary" %>
  <% end %>
  </div>
</container>
</div>
<div class="clearfix">
</div>
