<h1>All movies!</h1>
<ol>
<%@movies.each do |movie|%>
<li>
<strong><%=movie.name%></strong></br>
<%= link_to 'Show', movie_path(movie) %></br>
<%= link_to 'Edit', edit_movie_path(movie) %></br>
<%= link_to 'Destroy', movie_path(movie),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></br>
</li></br></br></br>
<%end%>
</ol>


<mm-button id="coolBtn">
    <label>Hi There</label>
</mm-button>
<script>
window.addEventListener("WebComponentsReady", function() {
    // Your web components are ready!
    // Do whatever you need to do here.
    var coolBtn = document.querySelector("#coolBtn");

    coolBtn.addEventListener("click", function(e) {
        console.log("coolBtn clicked!");
    });
});
</script>
