<container >
  <section>
    <div >
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="service-heading "><%=@movie.name %></h2>
                <h3 class="section-subheading text-muted">Director: <%= @movie.director%></h3>
                <h3 class="section-subheading text-muted">Info: <%= @movie.info%></h3>
                <h3 class="section-subheading text-muted">Rating: <%= @movie.effect_rating%></h3>
                <h3 class="section-subheading text-muted">Mood: <%= @movie.mood.name%></h3>
                <%= link_to 'Edit', edit_movie_path(@movie), class:"btn btn-primary" %> ||
                <%= link_to 'Back to all my movies!', movies_path, class:"btn btn-primary" %>
            </div>
        </div>
  </section>
</container>
