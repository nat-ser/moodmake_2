<container >
  <section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-primary"><%=@movie.name %></h2>
                <h3 class="section-subheading text-primary"><%= @movie.director%></h3>
                <h3 class="section-subheading text-primary"><%= @movie.info%></h3>
                <h3 class="section-subheading text-primary"><%= @movie.effect_rating%></h3>
                <h3 class="section-subheading text-primary"><%= @movie.mood.name%></h3>
                <%= link_to 'Edit', edit_movie_path(@movie) %> ||
                <%= link_to 'Back to all my movies!', movies_path %>
            </div>
        </div>
  </section>
</container>
